imagemagick = {{ imagemagick }}
poppler = {{ poppler }}
curl = {{ curl }}
libreoffice_bin = {{ libreoffice_bin }}
openssl_location = {{ openssl_location }}
clamd_bin = {{ clamd_bin }}
template_clamd_conf = {{ template_clamd_conf }}
freshclam_bin = {{ freshclam_bin }}
template_freshclam_conf = {{ template_freshclam_conf }}
avahi = {{ avahi }}
cairo = {{ cairo }}
